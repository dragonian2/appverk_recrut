<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">

        {% block head %}
        <title>Appverk - zadanko rekrut.</title>
        <meta http-equiv="content-type" content="text/html; charset=utf-8">
        {% endblock %}
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        <nav class="navbar navbar-expand-lg bg-primary navbar-dark">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <button id="btasks" type="button" class="btn btn-primary btn-lg">Zadania</button>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        {% if app.user %}
                            <button id="blogout" type="button" class="btn btn-primary btn-sm">Wyloguj się</button>
                        {% else %}
                            <button id="bsignin" type="button" class="btn btn-primary btn-sm">Zaloguj się</button>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </nav>
        {% if app.user %}
            <span id="user_loggedin">Zalogowany użytkownik: <span>{{ app.user.userIdentifier }}</span></span>
        {% endif %}

        {% block body %}{% endblock %}
        
        <footer class="mt-auto">
            <div class="text-center p-1 bg-primary" style="font-size: smaller; color: white">
                © 2025
            </div>
        </footer>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        {# {% block javascripts %} #}
        <script>
            $(document).ready(() => {
                // -> simple routing (on click)
                const routes = {
                    "#btasks": '/',
                    "#bsignin": '/login',
                    "#blogout": '/logout'
                }

                Object.entries(routes).forEach(el => {
                    $(el[0]).on('click', () => {
                        window.location.href = el[1]
                    })
                });
                // <-

                // -> login form - show/hide password
                $('span.togglePasswLink').on('click', () => {
                    const passwFieldIds = [
                        'login_password'
                    ]
                    let passwField = null
                    passwFieldIds.forEach(el => {
                        if ($(`#${el}`).hasOwnProperty('0')) {
                            passwField = $(`#${el}`)
                        }
                    })

                    let ftype = passwField.attr('type') === 'password' ? 'text' : 'password'

                    if (ftype === 'password') {
                        $('#show-hide-p').text('Pokaż')
                        $('i#togglePassword').removeClass('bi-eye-slash').addClass('bi-eye')
                    } else {
                        $('#show-hide-p').text('Ukryj')
                        $('i#togglePassword').removeClass('bi-eye').addClass('bi-eye-slash')
                    }

                    passwField.attr('type', ftype)
                })
                // <-

                // -> clearing flash msgs onclick (login form)
                $('button#login').on('click', () => {
                    $('div.alert').css('display', 'none')
                })

                // <-
            })
        </script>
        {# {% endblock %} #}
    </body>
</html>
