{% extends 'base.html.twig' %}

{% block body %}
    <form method="post">
        <div class="d-flex justify-content-center">
            <div class="mx-5 mt-4" style="width: 25%">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <img src="{{ asset('img/login-user.png') }}">
                            Logowanie
                        </h5>
                    </div>
                    <div class="card-body">
                        <p id="logincardp" class="card-text justifiedtxt">
                            {% if error %}
                                {% if error.message  == 'Bad credentials.'%}
                                    <div class="alert alert-danger">Niepoprawne dane logowania.</div>
                                {% else %}
                                    <div class="alert alert-danger">{{ error.message }}</div>
                                {% endif %}
                            {% endif %}
                            <div class="form-group row-v">
                                <label for="username" class="label-v">Login (e-mail):</label>
                                <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                            </div>
                            <div class="form-group row-v">
                                <label for="password" class="label-v">Hasło:</label>
                                <input type="password" name="_password" id="login_password" class="form-control" autocomplete="current-password" required>
                                <div class="togglePasswContainer">
                                    <span class="togglePasswLink">
                                        <i class="bi bi-eye" id="togglePassword"></i>
                                        <span id="show-hide-p">Pokaż</span> hasło</span>
                                    </span>
                                    <a id="forgottenPassw" href="#">Nie pamiętam hasła</a>
                                </div>
                                
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <input type="checkbox" name="_remember_me" id="_remember_me">
                                    <label for="_remember_me">Remember me</label>
                                </div>
                            #}

                            <button id="login" class="btn btn-primary btn-sm" type="submit">
                                Zaloguj się
                            </button>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
